<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Update Image Titles</h1>
        <div <div style="width: 30%; margin: 25px auto;">></div>
        <form action="/biketrails/<%= biketrail_id %>/images/<%= image._id%>/?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="image[location]"  value="<%= image.location %>" id="">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" >Create</button>
            </div>
        </form>
        <a href="/biketrails/<%= biketrail_id %>">Back</a>
    </div>
</div>

