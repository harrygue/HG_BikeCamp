<%- include ("../partials/header") %>
<h1>BIKE CAMP - Update comments</h1>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit and update Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/biketrails/<%= biketrail_id %>/comments/<%= comment._id%>/?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author.userName]" value="<%=comment.author.userName%>">
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]"  value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Update</button>
                </div>
            </form>
            <a href="/biketrails/<%= biketrail_id %>">Back</a>
        </div>
    </div>
</div>
<a href="/biketrails">View all Biketrails</a>
<%- include ("../partials/footer") %>