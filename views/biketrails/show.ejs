<%- include ("../partials/header") %>
div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Bike Camp</p>
            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <% biketrail.images.map((image) => { %>
                    <img class="image-responsive" src = '<%= image.url %>' alt="">
                    <p><%= image.location%></p>
                <% })%>
                <div class="caption-full">
                    <h4 class="pull-right">BlaBlaBla</h4>
                    <h4><a href=""><%= biketrail.name%></a></h4>
                    <p><%= biketrail.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/biketrails/<%= biketrail._id %>/comments/new">Create New Comment</a>
                </div>
                <div class="text-left">
                    <a class="btn btn-success" href="/biketrails/<%= biketrail._id %>/images/new">Upload New Image</a>
                </div>
                <hr>
                <% biketrail.comments.map((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author%></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%=comment.text%></p>
                        </div>
                    </div>
                <% });%>
            </div>

        </div>
    </div>
</div>


<a href="/biketrails">Back</a>
<%- include ("../partials/footer") %>