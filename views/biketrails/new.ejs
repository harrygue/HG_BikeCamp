<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new biketrail</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/biketrails" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="biketrail[name]" placeholder="Title" id="title">
                </div> 
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="biketrail[description]" placeholder="Description" id="description">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="kml">KML file (To display your track, upload Google .kml instead of .gpx files - use online converters)</label>
                    <input class="form-control" type="file" name="kml" id="kml" accept="kml/*">
                </div> 
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Create</button>
                </div>
            </form>
            <a href="/biketrails">Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>