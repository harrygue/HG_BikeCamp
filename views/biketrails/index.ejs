<%- include ("../partials/header") %>
<div class='container'>
    <header class='jumbotron'>
        <div class="container">
            <h1>Welcome to Bike Routes!</h1>
            <p>View our hand picked Bike Routes</p>
    
            <p>
                <a class="btn btn-primary btn-lg" href="/biketrails/new">Create New Biketrail</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Bike Trails!!!</h3>
        </div>
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% biketrails.forEach((biketrail) => { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <% biketrail.images.map((image) => { %>
                        <img src = '<%= image.image %>' alt="">
                        <p>Location: <%= image.location %></p>
                    <% })%>

                    <div class="caption">
                        <h3><%=biketrail.name%></h3>
                    </div>
                    <div class="caption">
                        <h4><%=biketrail.description%></h4>
                    </div>
                    <a class="btn btn-info" href="/biketrails/<%= biketrail._id%>">Detail</a>
                </div>
            </div>     
        <% }); %>
    </div>
</div>
<%- include ("../partials/footer") %>