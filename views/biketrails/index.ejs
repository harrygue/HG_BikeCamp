<%- include ("../partials/header") %>
<div class='container'>
    <header class='jumbotron'>
        <div class="container">
            <h2>Welcome to Awesome Bike Trails!</h2>
            <!--<p>View our hand picked Bike Routes</p>-->
            <p>
                <a class="btn btn-primary btn-lg" href="/biketrails/new">Create New Biketrail</a>
            </p>
            <p>
                <form action="/biketrails" method="get" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Biketrail search..." class="form-control">
                        <input type="submit" value="search" class="btn btn-md btn-default">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Bike Trails!!!</h3>
        </div>
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% biketrails.forEach((biketrail) => { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src = '<%=biketrail.images.length >0 ? biketrail.images[0].image:"" %>' alt="">
                    <p>Location: <%= biketrail.images.length >0 ? biketrail.images[0].location:"" %></p>

                    <div class="caption">
                        <h3><%=biketrail.name%></h3>
                    </div>
                    <div class="caption">
                        <h4><%=biketrail.description%></h4>
                    </div>
                    <!--Detail-->
                    <a class="btn btn-info" href="/biketrails/<%= biketrail._id%>">
                        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                    </a>
                </div>
            </div>     
        <% }); %>
    </div>
</div>
<%- include ("../partials/footer") %>